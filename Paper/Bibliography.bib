doi = {10.1016/j.icarus.2011.08.012},
file = {:home/luke/Dropbox/Thesis/Papers/Jenniskens et al. - CAMS Cameras for Allsky Meteor Surveillance to establish minor meteor showers - 2011.pdf:pdf},
