arxivId = {1404.6458},
author = {Suggs, R. M. and Moser, D. E. and Cooke, W. J. and Suggs, R. J.},
doi = {10.1016/j.icarus.2014.04.032},
eprint = {1404.6458},
issn = {10902643},
journal = {Icarus},
keywords = {Cratering,Meteors,Moon,Near-Earth Objects,Photometry},
pages = {23--36},
title = {{The flux of kilogram-sized meteoroids from lunar impact monitoring}},
volume = {238},
